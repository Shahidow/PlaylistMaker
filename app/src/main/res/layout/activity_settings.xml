<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/App"
    tools:ignore="ExtraText">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/BackButtom"
            android:id="@+id/backFromSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/back"
            app:icon="@drawable/back"
            app:iconGravity="start"
            app:iconPadding="24dp"/>
        <TextView
            style="@style/TextMenu"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:text="@string/settings"
            tools:ignore="TextSizeCheck" />
    </FrameLayout>>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Switch
            android:fontFamily="@font/ys_display_regular"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingsHeight"
            android:text="@string/theme"
            android:textSize="16sp"
            tools:ignore="UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />
        <Button
            android:id="@+id/share"
            style="@style/SettingsButtom"
            android:text="@string/share"
            app:icon="@drawable/share"
            tools:ignore="VisualLintButtonSize"/>
        <Button
            android:id="@+id/support"
            style="@style/SettingsButtom"
            android:text="@string/support"
            app:icon="@drawable/support"
            tools:ignore="VisualLintButtonSize"/>
        <Button
            android:id="@+id/terms"
            style="@style/SettingsButtom"
            android:layout_height="wrap_content"
            android:text="@string/terms"
            app:icon="@drawable/arrow"
            tools:ignore="VisualLintButtonSize"/>
    </LinearLayout>>
</LinearLayout>
