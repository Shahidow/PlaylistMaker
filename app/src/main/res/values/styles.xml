<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textSize">@dimen/textMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonRadius</item>
        <item name="iconTint">@color/blackPM</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextMenu">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textMenu</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackPM</item>
    </style>

    <style name="SettingsButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsHeight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/grey</item>
        <item name="iconGravity">end</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@null</item>
        <item name="android:translationZ">@null</item>
    </style>

    <style name="BackButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsHeight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/blackPM</item>
        <item name="iconGravity">end</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@null</item>
        <item name="android:translationZ">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="tint">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name="SearchTrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchTrackInfo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchNoResults">
        <item name="srcCompat">@drawable/noresults</item>
    </style>

    <style name="SearchNoInternet">
        <item name="srcCompat">@drawable/nointernet</item>
    </style>

    <style name="SearchRefreshButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/blackPM</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="LibrarySpecification">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="LibraryValue">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constraintWidth_max">250dp</item>
    </style>

    <style name="LibraryText">
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="layout_constraintWidth_max">300dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Favorite">
        <item name="android:src">@drawable/favorite</item>
    </style>

    <style name="PlayList">
        <item name="android:src">@drawable/play_list</item>
    </style>

    <style name="PlayerTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LibraryTabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/blackPM</item>
        <item name="tabSelectedTextColor">@color/blackPM</item>
    </style>

    <style name="LibraryTabLayoutText">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/blackPM</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNav">

    </style>

</resources>