<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blackPM</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blackPM</item>
    </style>

    <style name="MainButtons">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textMenu</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/buttonRadius</item>
        <item name="iconTint">@color/blackPM</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextMenu">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textMenu</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsHeight</item>
        <item name="android:backgroundTint">@color/blackPM</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@null</item>
        <item name="android:translationZ">@null</item>
    </style>

    <style name="BackButtom">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsHeight</item>
        <item name="android:backgroundTint">@color/blackPM</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@null</item>
        <item name="android:translationZ">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="tint">@color/blackPM</item>
        <item name="android:textColorHint">@color/blackPM</item>
        <item name="android:drawableTint">@color/blackPM</item>
    </style>

    <style name="SearchTrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchTrackInfo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchNoResults">
        <item name="srcCompat">@drawable/noresults_dark</item>
    </style>

    <style name="SearchNoInternet">
        <item name="srcCompat">@drawable/nointernet_dark</item>
    </style>

    <style name="SearchRefreshButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackPM</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>